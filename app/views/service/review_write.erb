<% if current_user.tag_list.include?("master") %>
<%= render 'manager/nav' %>
<% else %>
<%= render 'service/nav' %>
<% end %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

              <div class="card white">
                <div class="card-content">

                        <div class="left-align">
                            <h4><b>오아미스 후기 작성</b>

                            </h4>
                        </div>
                          <div class="row">
                            <br />
                          <div class="chip">

                              <%= current_user.name[0..1]  %> *
                            <img src="http://vignette3.wikia.nocookie.net/the-enigma-corporation/images/0/01/Users-User-icon.png/revision/latest?cb=20140213102228" alt="Contact Person">
                          </div>
                          <div class="chip">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            <% current_user.membership.category.each do |k| %>
                                <%= k %>
                            <% end %>
                          </div>
                          <br /><br />

                        <form action="/service/review_write_real" method="post" class="col s12">


                            <label>제목</label>
                            <input type="text" name="title">
                            <br>
                              <div class="row">
                                <div class="input-field col s12">
                                  <textarea style="height:250px;" name="content" id="textarea1" class="materialize-textarea"></textarea>
                                  <label for="textarea1">내용</label>
                                </div>
                              </div>


                            <input type="hidden" name="user_id" value="<%= current_user.id %>">
                            <div class="center-align">
                                <button class="btn waves-effect waves-light" type="submit" name="action">작성완료
                                 </button>
                            </div>
                        </form>
                          </div>

                    </div>
                </div>

            </div>
        </div>
    </div>


<%= render 'service/footer' %>
<%= render 'service/scrt' %>
