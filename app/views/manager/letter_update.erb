<%= render 'manager/nav' %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                            <h1>기사 수정</h1>
                            <form action="/manager/letter_update_real/<%= @l.id %>" method="post" enctype="multipart/form-data"><br>


                                <p>기사 카테고리

                                <label>
                                    <select class="form-control" name="category">
                                                <option><%= @l.category.name %></option>
                                        <% Category.all.each do |c| %>
                                                <option><%= c.name %></option>
                                        <% end %>

                                    </select>
                                </label>
                                </p>


                                <label>기사 날짜 </label>
                                <input type="date" name="date" class="datepicker" value="<%= @l.l_date %>">

                                <br>
                                <label>기사 사진</label><br />
                                <input type="file" accept="image/*" class="form-control" name="pic">
                                <br><br />
                                <label>기사 사진 출처</label>
                                <input class="form-control" name="pic_url" value="<%= @l.image_origin %>">
                                <br>

                                <label>기사 제목</label>
                                <input type="text" class="form-control" name="title" value="<%= @l.title %>"><br>
                                <label>기사 내용</label>
                                <textarea class="form-control" rows="3" name="content"><%= @l.content %></textarea>

                                <input type="submit">
                            </form>

            </div>
        </div>
    </div>


<%= render 'service/footer' %>
<%= render 'service/scrt' %>
